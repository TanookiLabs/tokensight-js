{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": [
    "prettier/react",
    "prettier",
    "prettier/standard",
    "standard",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "eslint:recommended"
  ],
  "plugins": ["react", "prettier", "standard", "babel", "promise", "mocha", "node"],
  "globals": {
    "expect": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-console": 0,
    "no-var": 2,
    "camelcase": 2,
    "keyword-spacing": [2, { "before": true, "after": true }],
    "object-curly-spacing": [2, "always"],
    "no-unused-vars": ["error", { "varsIgnorePattern": "should|expect|React" }],
    "prettier/prettier": "error",
    "max-len": ["error", { "code": 120, "ignoreUrls": true, "ignoreComments": true, "ignoreTemplateLiterals": true }],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }]
  }
}
